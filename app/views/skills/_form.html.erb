<%= form_with(model: skill) do |form| %>
  <% if skill.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(skill.errors.count, "error") %> prohibited this skill from being saved:</h2>

      <ul>
        <% skill.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <h4>Name</h4>
    <%= form.text_field :name %>
  </div>

  <div>
    <h4>Description</h4>
    <%= form.text_field :description %>
  </div>

  <div>
    <h4>Questions</h4>
    <%= form.collection_check_boxes :question_ids, Question.all, :id, :content do |c| %>
      <div class="check-box">
        <%= c.check_box %>
        <%= c.label %>
      </div>
    <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
